### EGEOFFREY ###

### define base image
ARG ARCHITECTURE
FROM $ARCHITECTURE/python:2.7-alpine

### define workdir
ENV WORKDIR=/egeoffrey
WORKDIR $WORKDIR

### install dependencies
RUN apk update && apk add python3 nano tzdata ca-certificates && rm -rf /var/cache/apk/*
RUN pip install paho-mqtt requests tinynumpy pyyaml yq apscheduler
RUN pip3 install paho-mqtt requests tinynumpy pyyaml yq apscheduler

### install eGeoffrey SDK
COPY . $WORKDIR

### define entrypoint
ENTRYPOINT ["sh", "docker-entrypoint.sh"]
CMD ["egeoffrey"]
