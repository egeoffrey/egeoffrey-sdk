### EGEOFFREY ###

### define base image
FROM resin/rpi-raspbian

### define workdir
ENV WORKDIR=/egeoffrey 
WORKDIR $WORKDIR

### install dependencies
RUN apt-get update && apt-get install -y jq nano curl wget unzip python3-pip expect net-tools usbutils raspi-config raspi-gpio wiringpi libraspberrypi-bin libusb-1.0.0-dev build-essential autoconf cmake pkg-config libtool python-dev libyaml-dev && apt-get clean && rm -rf /var/lib/apt/lists/*
RUN pip3 install paho-mqtt requests tinynumpy pyyaml yq apscheduler

### install eGeoffrey SDK
COPY . $WORKDIR

### define entrypoint
ENTRYPOINT ["bash", "docker-entrypoint.sh"]
CMD ["egeoffrey"]
